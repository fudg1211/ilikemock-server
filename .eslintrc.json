{
  "env": {
      "node": true,
      "browser": false,
      "commonjs": true,
      "es2021": true
  },
  "ignorePatterns": ["build/","node_modules/","database/"],
  "extends": [
      "eslint:recommended",
  ],
//   "parser": "@typescript-eslint/parser",
//   "parserOptions": {
//       "ecmaVersion": 12
//   },
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
      "indent": [
          "error",
          2
      ],
      "array-bracket-spacing": ["error","always"],
      "object-curly-spacing": ["error","always"],
      "no-multiple-empty-lines": ["error"],
      "space-infix-ops":"error",
      "key-spacing":"error",
      "arrow-spacing":"error",
      "space-before-blocks":"warn",
      "keyword-spacing":"error",
      "max-params":["error",3],
      "eqeqeq":"error",
      "block-spacing":"error",
      "comma-spacing":"error",
      "no-unused-vars":"error",
      "@typescript-eslint/no-explicit-any": 0,
      "@typescript-eslint/no-non-null-assertion":0,
      "@typescript-eslint/explicit-module-boundary-types":0,
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "always"
      ],
      "max-len":["error",160]
  }
}
